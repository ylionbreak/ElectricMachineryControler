<resources  xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--<item name="android:actionBarStyle" >@style/my_actionbar_style</item>-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="my_actionbar_style2" parent="android:Widget.ActionBar">
        <item name="android:background">@drawable/back</item>
        <item name="android:backgroundStacked">@drawable/back</item>
    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:backgroundStacked">#0288D1</item>
        <item name="android:background">#0288D1</item>
    </style>

    <style name="my_theme" parent="AppTheme">
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:actionBarStyle">@style/my_actionbar_style2</item>
    </style>
    <style name="parameterPrimaryTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="parameterTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#727272</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>

