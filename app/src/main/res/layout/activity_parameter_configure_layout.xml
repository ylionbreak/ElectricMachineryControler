<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:context=".SystemConfigure">

    <android.support.v7.widget.Toolbar
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">

    </android.support.v7.widget.Toolbar>

    <com.gc.materialdesign.views.ScrollView
        android:layout_below="@+id/toolbar"
        android:id="@+id/scroll"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            style="@style/parameterPrimaryTextTheme"
            android:text="--系统参数配置--"
            android:id="@+id/system_configure_text"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/CAN"
                style="@style/parameterTextTheme"
                android:id="@+id/CANtext"/>

            <RadioGroup android:id="@+id/CANchoose"
                        android:contentDescription="CANchoose"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:id="@+id/CAN120"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:id="@+id/CAN0"/>

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/WatchWindow"
                style="@style/parameterTextTheme"
                android:id="@+id/WatchWindow"/>

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"/>

        </LinearLayout>

        <TextView
            style="@style/parameterPrimaryTextTheme"
            android:text="--电机参数配置--"
            android:id="@+id/textView2"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/BianMaQi"
                android:id="@+id/textView3"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/JianSuBi"
                android:id="@+id/textView4"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/EDingDianYa"
                android:id="@+id/textView5"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/FengZhiDianYa"
                android:id="@+id/textView6"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/SuoDingDianLiu"
                android:id="@+id/textView7"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/FengZhiDianLiu"
                android:id="@+id/textView8"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/ZuiDaJiaSuDu"
                android:id="@+id/textView9"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/parameterTextTheme"
                android:text="@string/DianJiFangXiang"
                android:id="@+id/textView10"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.gc.materialdesign.views.ButtonRectangle
                android:background="#1E88E5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  返回  "
                android:id="@+id/button4"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <com.gc.materialdesign.views.ButtonRectangle
                android:background="#1E88E5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 进入PID设置 "
                android:id="@+id/enterSetPid"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

    </com.gc.materialdesign.views.ScrollView>
</RelativeLayout>

